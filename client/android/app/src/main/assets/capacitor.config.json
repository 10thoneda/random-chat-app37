{
	"appId": "com.ajnabicam.app",
	"appName": "AjnabiCam",
	"webDir": "dist",
	"server": {
		"androidScheme": "https"
	},
	"android": {
		"allowMixedContent": true,
		"captureInput": true,
		"webContentsDebuggingEnabled": true
	},
	"plugins": {
		"SplashScreen": {
			"launchShowDuration": 2000,
			"backgroundColor": "#ff6b6b",
			"showSpinner": false
		},
		"StatusBar": {
			"style": "dark",
			"backgroundColor": "#ff6b6b"
		}
	}
}
